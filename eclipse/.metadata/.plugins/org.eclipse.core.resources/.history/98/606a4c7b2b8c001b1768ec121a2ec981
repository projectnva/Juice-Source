package com.github.lunatrius.core.world.chunk;

import java.util.Random;
import net.minecraft.util.BlockPos;

public class ChunkHelper {

    private static final Random RANDOM = new Random();

    public static boolean isSlimeChunk(long seed, BlockPos pos) {
        int x = pos.getX() >> 4;
        int z = pos.getZ() >> 4;

        ChunkHelper.RANDOM.setSeed(seed + (long) (x * x * 4987142) + (long) (x * 5947611) + (long) (z * z * 4392871) + (long) (z * 389711) ^ 987234911L);
        return ChunkHelper.RANDOM.nextInt(10) == 0;
    }
}
