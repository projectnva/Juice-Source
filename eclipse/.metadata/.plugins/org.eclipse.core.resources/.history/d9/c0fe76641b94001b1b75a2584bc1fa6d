package me.aycy.blockoverlay.util;

public enum BlockOverlayMode {

    NONE("None"), DEFAULT("Default"), OUTLINE("Outline"), FULL("Full");

    private String name;

    private BlockOverlayMode(String name) {
        this.name = name;
    }

    public String getName() {
        return this.name;
    }

    public BlockOverlayMode getNextMode(BlockOverlayMode mode) {
        BlockOverlayMode[] modes = values();

        return modes[(mode.ordinal() + 1) % modes.length];
    }
}
