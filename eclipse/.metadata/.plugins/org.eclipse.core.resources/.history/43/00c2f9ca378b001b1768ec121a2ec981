package clientname.module.modules;

import clientname.event.Event;
import clientname.module.Module;
import net.minecraft.client.Minecraft;

public class Fullbright extends Module {
	    public Fullbright() {
	        super("FullBright", 35, Module.Category.RENDER);
	    }

	    @Override
	    public void onEnable() {
	    	Minecraft.getMinecraft().gameSettings.gammaSetting = 100.0f;
	    }

	    @Override
	    public void onDisable() {
	        Minecraft.getMinecraft().gameSettings.gammaSetting = 0.0f;
	    }

	    public void onEvent(Event event) {
	        if (event instanceof EventUpdate) {
	            event.isPre();
	        }
	    }
	}

}
