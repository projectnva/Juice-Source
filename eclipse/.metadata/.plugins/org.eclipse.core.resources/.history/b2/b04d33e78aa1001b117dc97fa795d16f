package clientname.mods;

import clientname.gui.hud.HUDManager;
import clientname.mods.impl.ModArmorStatus;
import clientname.mods.impl.ModCoords;
import clientname.mods.impl.ModFPS;
import clientname.mods.impl.ModFullbright;
import clientname.mods.impl.ModHealthIndicator;
import clientname.mods.impl.ModKeystrokes;
import clientname.mods.impl.ModPerspective;
import clientname.mods.impl.ModPing;
import clientname.mods.impl.ModPotionCounter;
import clientname.mods.impl.ModPotionStatus;
import clientname.mods.impl.ModProtest;
import clientname.mods.impl.crosshairmod.crosshair.Crosshair;
import clientname.mods.impl.togglesprintsneak.ModToggleSprintSneak;

public class ModInstances {

	private static ModArmorStatus modArmorStatus;
	private static ModFPS modFPS;
	private static ModCoords modCoords;
	private static ModPotionStatus modPotionStatus;
	private static ModPing modPing;
	private static ModKeystrokes modKeystrokes;
	private static ModFullbright modFullbright;
	private static Mod mod;
	private static ModPerspective modPerspective;
	private static ModPotionCounter modPotionCounter;
	private static ModToggleSprintSneak modToggleSprintSneak;
	private static ModProtest modProtest;
	
	public static void register(HUDManager api) {
		
		modProtest = new ModProtest(null, null, null, 0);
		api.register(modProtest);

		modArmorStatus = new ModArmorStatus(null, null, null, 0);
		api.register(modArmorStatus);
		
		modCoords = new ModCoords(null, null, null, 0);
		api.register(modCoords);
		
		modFPS = new ModFPS(null, null, null, 0);
		api.register(modFPS);
				
		modKeystrokes = new ModKeystrokes(null, null, null, 0);
		api.register(modKeystrokes);
		
		modPing = new ModPing(null, null, null, 0);
		api.register(modPing);
		
		modPotionStatus = new ModPotionStatus(null, null, null, 0);
		api.register(modPotionStatus);
		
		modPerspective = new ModPerspective(null, null, null, 0);
		api.register(modPerspective);
		
		modFullbright = new ModFullbright(null, null, null, 0);
		api.register(modFullbright);
		
		modPotionCounter = new ModPotionCounter(null, null, null, 0);
		api.register(modPotionCounter);
		
		modToggleSprintSneak = new ModToggleSprintSneak(null, null, null, 0);
		api.register(modToggleSprintSneak);
					
	}

	public static ModPerspective getModPerspective() {
		return modPerspective;
	}

	public static ModToggleSprintSneak getModToggleSprintSneak() {
		return modToggleSprintSneak;
	}
	
}