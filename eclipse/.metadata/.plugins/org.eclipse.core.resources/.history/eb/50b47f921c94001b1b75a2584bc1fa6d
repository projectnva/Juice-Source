package me.aycy.blockoverlay.utils;

import me.aycy.blockoverlay.BlockOverlay;

public enum Overlay {

    NONE("None"), DEFAULT("Default"), SIDE_OUTLINE("Side Outline"), SIDE_FULL("Side Full"), OUTLINE("Outline"), FULL("Full");

    public final String name;

    private Overlay(String name) {
        this.name = name;
    }

    public static Overlay getNextMode() {
        Overlay currentMode = BlockOverlay.config.getMode();

        return values()[(currentMode.ordinal() + 1) % values().length];
    }
}
