package com.github.lunatrius.core.client.gui.config;

import com.github.lunatrius.core.handler.ConfigurationHandler;
import com.github.lunatrius.core.reference.Names;
import java.util.Set;
import net.minecraft.client.Minecraft;
import net.minecraft.client.gui.GuiScreen;
import net.minecraftforge.fml.client.IModGuiFactory;
import net.minecraftforge.fml.client.IModGuiFactory.RuntimeOptionCategoryElement;
import net.minecraftforge.fml.client.IModGuiFactory.RuntimeOptionGuiHandler;

public class GuiFactory implements IModGuiFactory {

    public void initialize(Minecraft minecraft) {}

    public Class mainConfigGuiClass() {
        return GuiFactory.GuiModConfig.class;
    }

    public Set runtimeGuiCategories() {
        return null;
    }

    public RuntimeOptionGuiHandler getHandlerFor(RuntimeOptionCategoryElement element) {
        return null;
    }

    public static class GuiModConfig extends GuiConfigComplex {

        public GuiModConfig(GuiScreen parent) {
            super(parent, "LunatriusCore", ConfigurationHandler.configuration, Names.Config.LANG_PREFIX);
        }
    }
}
